@model SacramentMeetingPlanner.Models.Speaker

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Speaker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpeakingAssignments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Meeting Date</th>
                    <th>Topic</th>
                </tr>
                @foreach (var item in Model.SpeakingAssignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Meeting.MeetingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Topic)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
