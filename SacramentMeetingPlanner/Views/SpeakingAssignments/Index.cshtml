@model IEnumerable<SacramentMeetingPlanner.Models.SpeakingAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-shadow">
    <thead class="header-color">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TopicSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Topic</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaker)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Meeting Date</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meeting.MeetingDate)
            </td>
        </tr>
}
    </tbody>
</table>
